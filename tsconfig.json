{
	"compilerOptions": {
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "es6",
		"allowJs": true,
		"jsx": "react-jsx",
		"noImplicitAny": true,
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7", "ES2023"],
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	]
	// "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
